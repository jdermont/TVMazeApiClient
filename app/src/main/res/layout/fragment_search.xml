<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_search_show"
        android:inputType="text"/>

    <com.kennyc.view.MultiStateView
        android:id="@+id/searchMultiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_loadingView="@layout/state_loading"
        app:msv_emptyView="@layout/state_empty"
        app:msv_errorView="@layout/state_error"
        app:msv_viewState="content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchRecyclerView"
            android:padding="@dimen/global_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/search_item"/>

    </com.kennyc.view.MultiStateView>

</LinearLayout>